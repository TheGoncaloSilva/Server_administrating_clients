#:kivy 2.0.0

<Dash>:
	
	FloatLayout:
		size_hint: None, None
        size: root.width, root.height
        pos_hint: {'x': 0, 'y': 0}

		canvas.before:
            Rectangle:
				source: 'src/img/background_img.jpg'
                pos: self.pos
                size: self.size

		# Go back button
		#Button:
