		#	height: 40
		#	width: 40
		#	background_normal: "src/img/back.png"
		#	on_release:
		#		app.change_screen('home', 'right')
			
		Label:
            text: "Dashboard"
            pos_hint: {"x": 0, "top": 1.45}
			font_size: '24sp'
